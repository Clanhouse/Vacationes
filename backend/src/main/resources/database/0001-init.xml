<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="lukakan" id="0001-init">

        <createTable tableName="location">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="country" type="varchar(255)"/>
            <column name="city" type="varchar(255)"/>
            <column name="district" type="varchar(255)"/>
            <column name="airport_name" type="varchar(255)"/>
        </createTable>

        <createTable tableName="hotel">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="rate" type="float8"/>
            <column name="opinions" type="int"/>
            <column name="picture_url" type="varchar(255)"/>
        </createTable>

        <createTable tableName="flight">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="carrier_name" type="varchar(255)"/>
            <column name="price" type="decimal"/>
            <column name="url" type="varchar(255)"/>
            <column name="destination_id" type="bigint">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_destination_id__location_id"
                        referencedTableName="location"
                        referencedColumnNames="id"
                />
            </column>
            <column name="from_id" type="bigint">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_from_id__location_id"
                        referencedTableName="location"
                        referencedColumnNames="id"
                />
            </column>
            <column name="departure_date" type="date"/>
            <column name="return_date" type="date"/>
        </createTable>

        <createTable tableName="holiday">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="carrier_name" type="varchar(255)"/>
            <column name="destination_id" type="bigint">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_destination_id__location_id"
                        referencedTableName="location"
                        referencedColumnNames="id"
                />
            </column>
            <column name="flight_id" type="bigint">
                <constraints
                        foreignKeyName="fk_flight_id__flight_id"
                        referencedTableName="flight"
                        referencedColumnNames="id"
                />
            </column>
            <column name="price" type="decimal"/>
            <column name="duration" type="int"/>
            <column name="start" type="date"/>
            <column name="end" type="date"/>
            <column name="url" type="varchar(255)"/>
            <column name="picture_url" type="varchar(255)"/>
            <column name="offer_type" type="varchar(100)"/>
            <column name="offer_package" type="varchar(100)"/>
            <column name="hotel_id" type="bigint">
                <constraints
                        foreignKeyName="fk_hotel_id__hotel_id"
                        referencedTableName="hotel"
                        referencedColumnNames="id"
                />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
